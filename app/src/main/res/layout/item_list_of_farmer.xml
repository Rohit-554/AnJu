<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="10dp"
            >
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rl_product_img_name"
                    android:layout_width="wrap_content"
                    android:padding="5dp"
                    android:layout_height="wrap_content"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_vegetables"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:padding="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/vegetables"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@id/iv_vegetables"
                        android:layout_alignEnd="@id/iv_vegetables"
                        android:layout_alignBottom="@id/iv_vegetables"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="-1dp"
                        android:layout_marginBottom="0dp"
                        android:gravity="center"
                        android:text="@string/vegetables"
                        android:textColor="@color/primary_text_color" />
                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text=""
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_product_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text="pumpkin"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/farmer_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text="â‚¹40/kg"
                    android:layout_below="@id/tv_product_name"

                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />




                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:src="@drawable/baseline_delete_24"
                    android:tint="@color/primary_text_color"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/farmer_price"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text="@string/expire_date"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_expire_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/farmer_price"
                    android:layout_toEndOf="@id/tv_expire"
                    android:text="15-04-2023"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/primary_text_color"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_expire"
                    android:layout_toEndOf="@id/rl_product_img_name"
                    android:text="@string/description"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_expire"
                    android:layout_toEndOf="@id/tv_description"
                    android:text="@string/description"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/primary_text_color"
                    />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


</RelativeLayout>