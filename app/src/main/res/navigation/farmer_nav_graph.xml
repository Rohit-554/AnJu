<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/farmer_nav_graph"
    app:startDestination="@id/selectLanguageFragment">

    <fragment
        android:id="@+id/farmerDashBoardFragment"
        android:name="in.jadu.anju.farmer.ui.fragments.FarmerDashBoardFragment"
        android:label="fragment_farmer_dash_board"
        tools:layout="@layout/fragment_farmer_dash_board" >
        <action
            android:id="@+id/action_farmerDashBoardFragment_to_farmerListItemFragment"
            app:destination="@id/farmerListItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/farmerListItemFragment"
        android:name="in.jadu.anju.farmer.ui.fragments.FarmerListItemFragment"
        android:label="fragment_farmer_list_item"
        tools:layout="@layout/fragment_farmer_list_item" >
        <action
            android:id="@+id/action_farmerListItemFragment_to_farmerPreviewItemListFragment"
            app:destination="@id/farmerPreviewItemListFragment" />
    </fragment>
    <fragment
        android:id="@+id/farmerPreviewItemListFragment"
        android:name="in.jadu.anju.farmer.ui.fragments.FarmerPreviewItemListFragment"
        android:label="fragment_farmer_preview_item_list"
        tools:layout="@layout/fragment_farmer_preview_item_list" />
    <fragment
        android:id="@+id/selectLanguageFragment"
        android:name="in.jadu.anju.commonuis.SelectLanguageFragment"
        android:label="SelectLanguageFragment" >
        <action
            android:id="@+id/action_selectLanguageFragment_to_phoneVerificationFragment"
            app:destination="@id/phoneVerificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/phoneVerificationFragment"
        android:name="in.jadu.anju.commonuis.PhoneVerificationFragment"
        android:label="fragment_phone_verification"
        tools:layout="@layout/fragment_phone_verification" >
        <action
            android:id="@+id/action_phoneVerificationFragment_to_confirmOtpFragment2"
            app:destination="@id/confirmOtpFragment2" />
    </fragment>
    <fragment
        android:id="@+id/confirmOtpFragment2"
        android:name="in.jadu.anju.commonuis.ConfirmOtpFragment"
        android:label="fragment_confirmotp"
        tools:layout="@layout/fragment_confirmotp" >
        <action
            android:id="@+id/action_confirmOtpFragment2_to_farmerDashBoardFragment"
            app:destination="@id/farmerDashBoardFragment" />
    </fragment>
</navigation>